{
	"name": "smartsoft-labs",
	"version": "1.0.0",
	"description": "technical test for smartsoft",
	"main": "dist/src/index.js",
	"scripts": {
		"start": "NODE_ENV=production node dist/index.js",
		"start:ts": "NODE_ENV=production ts-node src/index.ts",
		"dev": "npm run build && nodemon --watch './**/*.ts' --exec 'ts-node' src/index.ts",
		"dev:watch": "tsc -w",
		"build": "rm -rf dist/ && tsc -b",
		"typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
		"migrations:create": "npm run typeorm -- migration:create -n",
		"migrations:generate": "npm run typeorm -- migration:generate -n",
		"migrations:run": "npm run build && npm run typeorm -- migration:run",
		"migrations:drop": "npm run build && npm run typeorm -- schema:drop",
		"migrations:show": "npm run build && npm run typeorm -- migration:show"
	},
	"keywords": [],
	"author": "Juan Sebasti√°n Agudelo @juansacdev <juansac.me@gmail.com>",
	"license": "MIT",
	"devDependencies": {
		"@types/bcryptjs": "^2.4.2",
		"@types/cors": "^2.8.12",
		"@types/express": "^4.17.13",
		"@types/helmet": "^4.0.0",
		"@types/morgan": "^1.9.3",
		"@types/node": "^16.9.1",
		"@typescript-eslint/eslint-plugin": "^4.31.0",
		"@typescript-eslint/parser": "^4.31.0",
		"eslint": "^7.32.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-import": "^2.24.2",
		"eslint-plugin-prettier": "^4.0.0",
		"nodemon": "^2.0.12",
		"prettier": "^2.4.0",
		"ts-node": "^10.2.1",
		"typescript": "^4.4.3"
	},
	"dependencies": {
		"@hapi/boom": "^9.1.4",
		"@types/jsonwebtoken": "^8.5.5",
		"bcryptjs": "^2.4.3",
		"cors": "^2.8.5",
		"dotenv": "^8.6.0",
		"express": "^4.17.1",
		"helmet": "^4.6.0",
		"jsonwebtoken": "^8.5.1",
		"morgan": "^1.10.0",
		"pg": "^8.7.1",
		"reflect-metadata": "^0.1.13",
		"typeorm": "^0.2.37"
	}
}
